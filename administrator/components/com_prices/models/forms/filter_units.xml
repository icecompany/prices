<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_PRICES_FILTER_UNITS_TITLE"
                description="COM_PRICES_FILTER_UNITS_TITLE"
                hint="COM_PRICES_FILTER_UNITS_TITLE"
                autocomplete="off"
                class="js-stools-search-string"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_PRICES_FILTER_SELECT_FULL_ORDERING"
                description="COM_PRICES_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="title asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="u.title ASC">COM_PRICES_SORTING_TITLE_ASC</option>
            <option value="u.title DESC">COM_PRICES_SORTING_TITLE_DESC</option>
            <option value="u.weight ASC">COM_PRICES_SORTING_WEIGHT_ASC</option>
            <option value="u.weight DESC">COM_PRICES_SORTING_WEIGHT_DESC</option>
            <option value="u.id ASC">COM_PRICES_SORTING_ID_ASC</option>
            <option value="u.id DESC">COM_PRICES_SORTING_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_PRICES_FILTER_SELECT_LIMIT"
                description="COM_PRICES_FILTER_SELECT_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>
<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.8" method="upgrade">
	<name>COM_PRICES</name>
	<creationDate>25.02.2020</creationDate>
	<author>Антон</author>
	<authorEmail>xakepok@xakepok.com</authorEmail>
	<authorUrl>http://your.url.com</authorUrl>
	<copyright>A copyright</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.0.2</version>
	<description>COM_PRICES_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation -->
	<scriptfile>script.php</scriptfile>

	<!-- Runs on install -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/mysql.sql</file>
		</sql>
	</install>

	<!-- Runs on update -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Media files -->
	<media folder="media/com_prices" destination="com_prices">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<!-- Front-end files -->
	<files folder="components/com_prices">
		<filename>prices.php</filename>
		<filename>controller.php</filename>
		<folder>controllers</folder>
		<folder>language</folder>
		<folder>layouts</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu view="prices">COM_PRICES</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu view="items">COM_PRICES_MENU_ITEMS</menu>
			<menu view="prices">COM_PRICES_MENU_PRICES</menu>
			<menu view="watchers">COM_PRICES_MENU_WATCHERS</menu>
			<menu view="sections">COM_PRICES_MENU_SECTIONS</menu>
			<menu view="units">COM_PRICES_MENU_UNITS</menu>
		</submenu>

		<!-- Core files -->
		<files folder="administrator/components/com_prices">
			<filename>prices.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>LICENSE.txt</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
	</administration>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="prices">https://www.example.com/prices.xml</server>
	</updateservers>
</extension>
